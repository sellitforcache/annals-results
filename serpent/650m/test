% --- Simple Input - Single Pin -------------------

set title "black BC, pin, u235-fuel, heavy water"

% --- pincell

surf  3 cyl       0  0  2    -25     25
%surf 3 hexyprism 0  0  25 -25 25  %x0 y0 r z1 z2
%surf 3 cuboid  -25 25 -25 25 -25 25
surf 2 cuboid   -5 5 -5 5 -30 30

% --- Cell definitions:

cell 1   0      fuel1     -3 
cell 2   0      water      3 -2
cell 99  0      outside    2  				

% --- Fuel materials:

mat fuel1   -10.97
 92235.03c    0.10 
 92238.03c    0.90

mat water  -1.11
 8016.03c  1
 1002.03c  2

% --- Cross section data library file path:

set acelib "/xs/sss_endfb7u.xsdata"
%set acelib "/xs/xsdir_serpent"

% --- black boundary condition:

set bc 2 2 2

% detectors

ene leth 3 1024 1e-11 20
ene lin  2 1024 1e-11 20
det fluxlog dc 1  de leth dt -3
det fluxlin dc 1  de lin  dt -3

% --- Geometry and mesh plots:

plot 3 1500 1500
plot 2 1500 1500
mesh 3 1500 1500

% --- criticality parameters

set pop 100000 40 20 % 1.00
